<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron">
            <div class="container">
                <h2> Welcome YelpCamp! </h2>
                <p> View our handpicked campgrounds from all over the world.</p>
                <p> 
                    <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground! </a>
                </p>
            </div>
    </header>
 
    <div class="row photoGrid text-center"> 
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds.image %>">
                    <div class="caption">
                        <h4> <%= campgrounds.name %> </h4>
                    </div>
                    <a class="detailBtn btn btn-primary" href="/campgrounds/<%= campgrounds._id %>"> More info </a>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>