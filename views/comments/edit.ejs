<% include ../partials/header %>

<div class="container">
    <div class="row"> 
        <h1 class="newFormH1"> Edit your comment to <%= bike.name %> ! </h1>
        
        <div class="newForm">
            <form action="/bikes/<%= bike._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Update comment </button>
                </div>
            </form>
            <a class="btn" href="/bikes/<% bike._id %>"> Go back </a>
        </div>
    
    </div>
</div>

<% include ../partials/footer %>