<% include ../partials/header %>

<div class="container">
    <div class="row"> 
        <h1 class="newFormH1"> Edit camp </h1>
        
        <div class="newForm">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Campground Name</label>
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                       <label>Image URL</label>
                    <input class="form-control" type="text" name="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                       <label>Campground Description</label>
                    <textarea name="description" rows="4" cols="50"><%= campground.description %>"</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Update camp! </button>
                </div>
            </form>
            <a class="btn" href="/campgrounds"> Go back </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>